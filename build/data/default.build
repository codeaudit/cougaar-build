# scalability testing kit
scalability.deps = core,glm,util
scalability.jars = xerces

# aggregation agent
aggagent.deps = core,planserver,glm,util
aggagent.jars = xerces,jpython,silk,servlet

# vishnu scheduler
vishnu.deps = core,toolkit,glm,util
vishnu.jars = xerces,vishnuServer
