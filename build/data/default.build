# bol module
bol.repository = external
bol.deps = util,core,glm,planserver
bol.jars = servlet,hsql,jess50,graph,xerces
# Split bol packages into sub packages of src
bol.split = lesson1,lesson2,lesson3,lesson4
# bol is an add-on, don't make it part of the runtime
bol.standalone = 1
# might want to do the following at some point.
#bol.lesson1.deps = core,glm,planserver
#bol.lesson1.jars = servlet
#bol.lesson2.deps = core,glm,planserver
#bol.lesson2.jars = servlet,hsql,jess50
#bol.lesson3.jars = servlet,hsql,jess50,graph
#bol.lesson4.jars = servlet,hsql,jess50,graph,xerces
# bol needs javac for now
bol.compiler=javac
bol.compiler.deprecation = 1

# community
community.deps = util,core,glm,planserver,manager,webserver
community.jars = log4j,xerces,servlet

# dbms module
dbms.repository = dbms

#
# Adaptive Logistics jars
#
# AL BBN
albbn.deps = core,planserver,util,toolkit,glm,vishnu
albbn.jars = xerces,openmap,fesi-111,jcchart,servlet,vishnuServer
albbn.repository = :ext:cvs.ultralog.net:/cvs/logistics/bbn
