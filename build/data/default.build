# blackjack
blackjack.deps = core,glm,planserver,toolkit,aggagent,vishnu,uiframework,util
blackjack.jars = xerces,jcchart,servlet,silk,jpython,ejb,jdbc2_0-stdext
blackjack.repository = internal
blackjack.private=1

# Marines
Marine.deps = core,glm,util
Marine.jars = xerces
Marine.repository = internal

# uiframework
uiframework.deps = core,glm,planserver,aggagent,datagrabber,util
uiframework.jars = xerces,openmap,vgj,xerces
uiframework.extras = mm-mysql-2

# tutorials
tutorial.deps = core,glm,util
tutorial.jars = xerces

# csmart
csmart.deps = core,server,glm,scalability,bootstrap,util
csmart.jars = xerces,jcchart,grappa1_2,servlet
