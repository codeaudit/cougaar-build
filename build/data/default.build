# tops
#tops.deps = core,glm,toolkit,planserver,vishnu,util
#tops.jars = xerces,topsga,openmap,chart
#tops.extras = mm-mysql-2
#tops.repository = internal

# datagrabber
datagrabber.deps = core,glm,toolkit,planserver,util
datagrabber.jars = xerces,chart,openmap,servlet
datagrabber.repository = internal

# delta and deltaeport HEAD against cougaar V9_0_0 dependencies 020408..md
